<%# app/views/search_history/index.html.erb -%>
<%-
  page_title ||= :'blacklight.search_history.page_title'
  @page_title = t(page_title, application_name: application_name)

  no_searches = list_heading = clear_list_button = ctrlrs = delete_label = nil
  save_label = nil

  page_heading = t('blacklight.search_history.title')
  if @searches.blank?
    no_searches = t('blacklight.search_history.no_history')
  else
    list_heading       = t('blacklight.search_history.recent')
    clear_list_title   = t('blacklight.search_history.clear.action_title')
    clear_confirmation = t('blacklight.search_history.clear.action_confirm')
    clear_list_path    = blacklight.clear_search_history_path
    clear_list_button  =
      link_to(
        clear_list_title,
        clear_list_path,
        method: :delete,
        data:   { confirm: clear_confirmation },
        class:  'btn btn-danger pull-right'
      )
    save_label   = t('blacklight.search_history.save')
    delete_label = t('blacklight.search_history.forget')
    ctrlrs = {}
  end
-%>

<div id="content" class="col-md-9">

  <h2 class='page-heading'><%= page_heading %></h2>

  <%- if no_searches -%>

    <h3 class='section-heading'><%= no_searches %></h3>

  <%- else -%>

    <%= clear_list_button %>
    <h3 class='section-heading'><%= list_heading %></h3>

    <table class="table table-striped search_history">
      <%- index = 0 -%>
      <%- @searches.each do |search| -%>
        <%- query = search.query_params || {} -%>
        <%- next unless query_has_constraints?(query) -%>
        <%- type = lens_key_for(query[:controller]) -%>
        <%- type_class = (type == :catalog) ? 'info' : 'warning' -%>
        <%- ctrlrs[type] ||= lens_for(type).instance(@response, request) -%>
        <%- index += 1 -%>
        <tr id="<%= "document_#{index}" -%>">
          <td class="search-type">
            <div class="label label-<%= type_class -%> search-type">
              <%= type.capitalize -%>
            </div>
          </td>
          <td class="query">
            <%= ctrlrs[type].instance_exec(query) do |query| -%>
              <%- link_params = search_state.reset(query).to_hash -%>
              <%- view_context.link_to_previous_search(link_params) -%>
            <%- end -%>
          </td>
          <%- if has_user_authentication_provider? -%>
            <td class="actions">
              <%- id = search.id -%>
              <%- not_saved = !(current_or_guest_user && search.saved?) -%>
              <%- label = not_saved ? save_label : delete_label -%>
              <%- path  = blacklight.forget_search_path(id) -%>
              <%- path  = blacklight.save_search_path(id) if not_saved -%>
              <%- opt   = { class: 'btn btn-' } -%>
              <%- opt[:class] += (not_saved ? 'default' : 'danger') -%>
              <%- opt[:method] = :put if not_saved -%>
              <%= button_to(label, path, opt) -%>
            </td>
          <%- end -%>
        </tr>
      <%- end -%>
    </table>

  <%- end -%>

</div>
