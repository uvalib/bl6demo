<%# app/views/saved_searches/index.html.erb -%>
<%-
  page_title ||= :'blacklight.saved_searches.page_title'
  @page_title = t(page_title, application_name: application_name)

  no_searches = list_heading = clear_list_button = ctrlrs = delete_label = nil
  need_login = nil

  page_heading = t('blacklight.saved_searches.title')
  if current_or_guest_user.blank?
    need_login  = t('blacklight.saved_searches.need_login')
  elsif @searches.blank?
    no_searches = t('blacklight.saved_searches.no_searches')
  else
    list_heading       = t('blacklight.saved_searches.list_title')
    clear_list_title   = t('blacklight.saved_searches.clear.action_title')
    clear_confirmation = t('blacklight.saved_searches.clear.action_confirm')
    clear_list_path    = blacklight.clear_saved_searches_path
    clear_list_button  =
      link_to(
        clear_list_title,
        clear_list_path,
        method: :delete,
        data:   { confirm: clear_confirmation },
        class:  'btn btn-danger pull-right'
      )
    delete_label = t('blacklight.saved_searches.delete')
    ctrlrs = {}
  end
-%>

<div id="content" class="col-md-9">

  <h2 class='page-heading'><%= page_heading %></h2>

  <%- if need_login -%>

    <h3 class='section-heading'><%= need_login %></h3>

  <%- elsif no_searches -%>

    <h3 class='section-heading'><%= no_searches %></h3>

  <%- else -%>

    <%= clear_list_button %>
    <h3 class='section-heading'><%= list_heading %></h3>

    <table class="table table-striped search_history">
      <%- index = 0 -%>
      <%- @searches.each do |search| -%>
        <%- query = search.query_params || {} -%>
        <%- type = lens_key_for(query[:controller]) -%>
        <%- type_class = (type == :catalog) ? 'info' : 'warning' -%>
        <%- ctrlrs[type] ||= lens_for(type).instance(@response, request) -%>
        <%- index += 1 -%>
        <tr id="<%= "document_#{index}" -%>">
          <td class="search-type">
            <div class="label label-<%= type_class -%> search-type">
              <%= type.capitalize -%>
            </div>
          </td>
          <td class="query">
            <%= ctrlrs[type].instance_exec(query) do |query| -%>
              <%- link_params = search_state.reset(query).to_hash -%>
              <%- view_context.link_to_previous_search(link_params) -%>
            <%- end -%>
          </td>
          <td class="actions">
            <%- label = delete_label -%>
            <%- path  = blacklight.forget_search_path(search.id) -%>
            <%- opt   = { class: 'btn btn-danger' } -%>
            <%= button_to(label, path, opt) %>
          </td>
        </tr>
      <%- end -%>
    </table>

  <%- end -%>

</div>
